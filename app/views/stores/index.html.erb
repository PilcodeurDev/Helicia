<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    <div class="card">
      <% @stores.each do |store| %>
        <a class="container-link" href="">
          <div class="container">
            <%= image_tag(store.image_url, class: "image") %>
              <div class="circle">
                <p class="input-rating" name="rating" readonly><%= store.rating %></p>
              </div>
            <div class="text">
              <h3 class="title"><%= store.title %></h3>
              <p class="input-fees" name="fees" readonly>Delivery fee: <%= store.delivery_fees %>CHF</p>
              <p class="input-estimated_delivery_time" name="estimated_delivery_time" readonly>Estimated delivery time: <%= store.estimated_delivery_time %>~</p>
            </div>
          </div>
        </a>
      <% end %>
    </div>
  </body>
</html>
