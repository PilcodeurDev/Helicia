<!-- Store -->

<div class="container">
  <div class="row">
    <div class="d-flex">
      <%=link_to "Home", stores_path, class:"text-primary p-1 text-decoration-none" %>
      <p class="p-1">></p>
      <p class="text-primary p-1"><%= @store.title %></p>
    </div>

    <!-- image + bouton back et search -->
    <div class="image_p" style="background-image: url(<%= image_path(@store.image_url) %>)">
      <div class="d-flex justify-content-between">
        <div>
          <%= link_to stores_path, style: "text-decoration: none" do %>
            <%= image_tag("back.png", width: "45", height: "45", class:"rounded-circle mt-3") %>
          <% end %>
        </div>
        <div>
          <%= image_tag("loupe.png", width: "45", height: "45", class:"rounded-circle mt-3") %>
        </div>
      </div>
    </div>

    <div>
      <h1 class="my-3 fw-bolder fs-1">
        <%= @store.title %>
      </h1>
      <span class="d-flex">
        <div class="fs-5">
          <%= image_tag("etoile.jpg", width: "16", height: "16") %>
          <%= @store.rating %> (95 notes)
        </div>
      </span>

      <span>
        Open till 11:00 PM
      </span>

      <div class="mt-2">
        Free delivery starting from 15 CHF
      </div>

      <div class="d-flex justify-content-between">
        <div>
          <%= image_tag("drone1.jpg", width: "28", height: "28", class:"rounded-circle") %>
          <span>Delivery in <%= @store.estimated_delivery_time%></span>
        </div>
      </div>
    </div>
  </div>


<!-- mettre en place le systeme de breakpoint ()-->
  <% categorys = Article.distinct.pluck(:category) %>

  <div class="mt-5 py-1">
    <div data-controller="break-point" class= "list-group list-group-horizontal list-group-item-secondary">
      <p data-action="click->break-point#scrolling_all" class="list-group-item list-group-item-action text-decoration-none">All</p>
      <p data-action="click->break-point#scrolling_Pain" class="list-group-item list-group-item-action text-decoration-none text-dark"><%=categorys[0]%></p>
      <p data-action="click->break-point#scrolling_Digestion" class="list-group-item list-group-item-action text-decoration-none text-dark">Digestion</p>
      <p data-action="click->break-point#scrolling_Coolings" class="list-group-item list-group-item-action text-decoration-none text-dark">Coolings</p>
      <p data-action="click->break-point#scrolling_Skin_hair" class="list-group-item list-group-item-action text-decoration-none text-dark">Skin & hair</p>
      <p data-action="click->break-point#scrolling_eyes" class="list-group-item list-group-item-action text-decoration-none text-dark">eyes</p>
    </div>
  </div>


  <h4 class="mb-4 mt-4 fs-1"><strong> <%=categorys[0]%> </strong></h4>

  <% @articles.each do |article| %>
    <%= link_to article_path(article), style: "text-decoration: none" do %>
      <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
          <h3 class="fs-4 title text-dark"><%= article.title %></h3>
          <div class="main pb-2"><%= sprintf('%.2f', article.price.to_f) %> CHF</div>
          <span class="text-secondary"><%= article.description.truncate(24)%></span>
        </div>
        <div >
          <%= image_tag(article.image_url, width: "120", height: "120" ) %>
        </div>
      </div>
    <% end %>
  <%end%>
</div>
