<!-- Store -->

<div class="container">
  <div class="row">
    <div class="d-flex">
      <%=link_to "Home", stores_path, class:"text-primary p-1 text-decoration-none" %>
      <p class="p-1">></p>
      <p class="text-primary p-1"><%= @store.title %></p>
    </div>

    <!-- changer le css des boutons back et search => bouton blanc avec logo fleche et loupe -->
    <div class="image_p" style="background-image: url(<%= image_path(@store.image_url) %>)">
      <div class="d-flex justify-content-between">
        <div class="border border-white rounded-circle fs-6">
          <%=link_to "Back", stores_path %>
        </div>
        <div class="border border-white rounded-circle fs-6">
          <%=link_to "Search", "#" %>
        </div>
      </div>
    </div>
    <div>
      <h1 class="mt-3 fw-bolder">
        <%= @store.title %>
      </h1>
      <span class="d-flex">
        <div>
          <%= image_tag("etoile.jpg", width: "16", height: "16") %>
          <%= @store.rating %> (95 notes)
        </div>
      </span>
      <span>
        Ouvert jusqu’a 11:00 PM
      </span>
      <div>
        Free delivery from 15.CHF
      </div>
      <div class="d-flex justify-content-between">
        <div>
          <%= image_tag("drone1.jpg", width: "28", height: "28", class:"rounded-circle") %>
          <span>Delivery in <%= @store.estimated_delivery_time%></span>
        </div>
        <!-- ajout ici de la fonctionnalité de livrer plus tard -->
        <span class="main">Edit</span>
      </div>
    </div>
  </div>
  <!-- barre de recherche a remplacer plus tard par break_point -->
  <div class="col-sm-8 my-3">
      <%= form_with url: stores_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Type a keyword"
      %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
      <% end %>
  </div>

  <!-- Articles pour chaque store -->

    <h4 class="mb-4 mt-4" ><strong>1 purchased = 1 offered </strong></h4>

  <div class="d-flex justify-content-between">
    <div>
      <% article = @articles.last %>
      <h3 class="fs-5"><strong><%= link_to "#{article.title}", store_article_path(article) %></h3>
      <div class="main"><%= article.price %> CHF</div>
      <%= article.description.truncate(24) %>
    </div>
    <div>
      <%= image_tag("drone1.jpg", width: "120", height: "120", class:"") %>
    </div>
  </div>

    <h4 class="mb-4 mt-4"><strong>Most popular</strong></h4>

  <div>
    <% @articles.each do |article| %>
      <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
          <h3 class="fs-5 title"><strong><%= link_to "#{article.title}", store_article_path(article) %></strong></h3>
          <div class="main"><%= article.price %> CHF</div>
          <%= article.description.truncate(24) %>
        </div>
        <div>
          <% if (article.image_url) %>
            <%= article.image_url %>
          <% else %>
            <%= image_tag("drone1.jpg", width: "120", height: "120") %>
          <% end %>
        </div>
      </div>

      <% end %>
  </div>
</div>
