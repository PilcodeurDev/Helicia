<div class="container">
  <div class="d-flex">
    <%=link_to "Home", stores_path, class:"text-primary p-1 text-decoration-none" %>
    <p class="p-1">></p>
    <p class="text-primary p-1"><%= @article.store.title %></p>
    <p class="p-1">></p>
    <p class="text-primary p-1"><%= @article.title %></p>
  </div>
  <div class="image_p" style="background-image: url(<%= image_path(@article.image_url) %>)">
    <div class="d-flex justify-content-between">
      <div class="border border-black rounded-circle fs-6">
        <%=link_to "Back", stores_path %>
      </div>
    </div>
  </div>

  <div>
    <h1 class="mt-5 fw-bolder"><%= @article.title %></h1>
  </div>

  <div>
    <h4 class="mt-4 mb-3 fw-bolder"><%= @article.category %></h4>
  </div>

  <div class="main mb-3 fw-bolder">
    <%= @article.price %> CHF
  </div>

  <div>
    <p class="mt-3 fw-bolder"><%= 'Description : '%></p>
    <p><%= @article.description %></p>
  </div>

  <div class="d-flex jauge_photo">
    <%= image_tag("jauge_photo.png") %>
  </div>

  <div class="btn_magic">
    <%= link_to "Add article to cart", user_article_orders_path(current_user) %>
  </div>
</div>
